<Window x:Class="boxen.box"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:boxen"
        mc:Ignorable="d"
        Title="box" Height="350" Width="525" Loaded="Window_Loaded">
    <StackPanel Orientation="Vertical" Margin="0 20 0 0">
        <StackPanel Orientation="Horizontal">
            <TextBox Margin="10" Text="Categorie:"></TextBox>
            <ComboBox Name="categorie" Width="150" Margin="10" SelectionChanged="categorie_SelectionChanged">
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="80" Margin="10 20 0 0">
            <ListBox Width="300" Name="lbhobbies" DisplayMemberPath="Activiteit"></ListBox>
            <ToggleButton Name="Kies" Content="Kies" Margin="20 30 0 30" Width="150" Click="Kies_Click"></ToggleButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="80" Margin="10 20 0 0">
            <ListBox Width="300" Name="lbSelecties"></ListBox>
            <ToggleButton Name="Verwijderen" Content="Verwijderen" Margin="20 30 0 30" Width="150" Click="Verwijderen_Click"></ToggleButton>
        </StackPanel>
    </StackPanel>
</Window>
